{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "strict": true,
    "paths": {
      "@root/*": ["*"]
    },
    "downlevelIteration": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
